<Page1>:
    md_bg_color: [1,1,0,1]
    name:"Page1"
    
    MDFloatLayout:
        
        # Logo CEET en haut
        Image:
            source: "CEET.png"
            size_hint: None, None
            size: dp(100), dp(100)
            pos_hint: {"center_x": .5, "top": .97}
        
        # Titre principal
        MDLabel:
            id: Page1_1
            text: "LOGICIEL DE CONTRÔLE DU BCC"
            font_style: "H5"
            markup: True
            halign: "center"
            theme_text_color: "Primary"
            pos_hint: {"center_x": .5, "center_y": .79}
            text_size: self.width, None
            size_hint_y: None
            height: dp(40)
        
        # Zone de contenu principal avec scroll
        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .9, .5
            
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                spacing: dp(15)
                padding: dp(20)

                # Carte Sécurisé
                MDCard:
                    orientation: "vertical"
                    md_bg_color: [0.85, 0.95, 0.88, 1]
                    radius: [15]
                    elevation: 2
                    padding: dp(15)
                    size_hint_y: None
                    height: dp(120)
                    ripple_behavior: True
                    
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: dp(10)
                        adaptive_height: True
                        
                        MDIcon:
                            icon: "shield-check"
                            theme_icon_color: "Custom"
                            icon_color: [0.1, 0.6, 0.2, 1]
                            font_size: dp(24)
                            size_hint: None, None
                            size: dp(40), dp(40)
                            pos_hint: {"center_y": .5}
                        
                        MDBoxLayout:
                            orientation: "vertical"
                            spacing: dp(5)
                            adaptive_height: True
                            
                            MDLabel:
                                text: "[b]Sécurisé[/b]"
                                font_style: "H6"
                                markup: True
                                theme_text_color: "Custom"
                                text_color: [0.1, 0.5, 0.15, 1]
                                size_hint_y: None
                                height: dp(25)
                            
                            MDLabel:
                                text: "Contrôle sécurisé des opérations BCC avec traçabilité complète"
                                font_style: "Caption"
                                text_size: self.width, None
                                theme_text_color: "Custom"
                                text_color: [0.2, 0.4, 0.25, 1]
                                size_hint_y: None
                                height: dp(40)

                # Carte Rapide
                MDCard:
                    orientation: "vertical"
                    md_bg_color: [0.85, 0.92, 0.98, 1]
                    radius: [15]
                    elevation: 2
                    padding: dp(15)
                    size_hint_y: None
                    height: dp(120)
                    ripple_behavior: True
                    
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: dp(10)
                        adaptive_height: True
                        
                        MDIcon:
                            icon: "lightning-bolt"
                            theme_icon_color: "Custom"
                            icon_color: [0.1, 0.4, 0.8, 1]
                            font_size: dp(24)
                            size_hint: None, None
                            size: dp(40), dp(40)
                            pos_hint: {"center_y": .5}
                        
                        MDBoxLayout:
                            orientation: "vertical"
                            spacing: dp(5)
                            adaptive_height: True
                            
                            MDLabel:
                                text: "[b]Rapide[/b]"
                                font_style: "H6"
                                markup: True
                                theme_text_color: "Custom"
                                text_color: [0.1, 0.3, 0.7, 1]
                                size_hint_y: None
                                height: dp(25)
                            
                            MDLabel:
                                text: "Interface intuitive pour une saisie et consultation rapide"
                                font_style: "Caption"
                                text_size: self.width, None
                                theme_text_color: "Custom"
                                text_color: [0.2, 0.3, 0.6, 1]
                                size_hint_y: None
                                height: dp(40)

                # Carte Professionnel
                MDCard:
                    orientation: "vertical"
                    md_bg_color: [0.92, 0.88, 0.96, 1]
                    radius: [15]
                    elevation: 2
                    padding: dp(15)
                    size_hint_y: None
                    height: dp(120)
                    ripple_behavior: True
                    
                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: dp(10)
                        adaptive_height: True
                        
                        MDIcon:
                            icon: "office-building"
                            theme_icon_color: "Custom"
                            icon_color: [0.4, 0.2, 0.7, 1]
                            font_size: dp(24)
                            size_hint: None, None
                            size: dp(40), dp(40)
                            pos_hint: {"center_y": .5}
                        
                        MDBoxLayout:
                            orientation: "vertical"
                            spacing: dp(5)
                            adaptive_height: True
                            
                            MDLabel:
                                text: "[b]Professionnel[/b]"
                                font_style: "H6"
                                markup: True
                                theme_text_color: "Custom"
                                text_color: [0.3, 0.15, 0.6, 1]
                                size_hint_y: None
                                height: dp(25)
                            
                            MDLabel:
                                text: "Conforme aux standards CEET-DRM pour un usage optimal"
                                font_style: "Caption"
                                text_size: self.width, None
                                theme_text_color: "Custom"
                                text_color: [0.25, 0.2, 0.5, 1]
                                size_hint_y: None
                                height: dp(40)
        
        # Sous-titre en bas
        MDLabel:
            id: Page1_2
            text: "CEET-DRM-BCC"
            font_style: "Subtitle1"
            markup: True
            halign: "center"
            pos_hint: {"center_x": .5, "center_y": .2}
            theme_text_color: "Custom"
            text_color: [0.3, 0.3, 0.3, 1]
            size_hint_y: None
            height: dp(30)
        
        # Bouton Aller
        MDRaisedButton:
            id: Page1_3
            text: "Aller"
            on_release: app.Go(self)
            size_hint: .4, None
            height: dp(45)
            font_size: sp(18)
            pos_hint: {"center_x": .5, "center_y": .1}
            md_bg_color: [0.15, 0.55, 0.9, 1]
            elevation: 3
